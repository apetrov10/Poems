<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >
    
  <ScrollView
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:background="@android:color/black" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
        <Button
	        android:id="@+id/milev1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Септември"
	        android:onClick="onClick"
	        android:textColor="@android:color/white"
	        android:textColorHint="@android:color/background_light" />
        <Button
	        android:id="@+id/milev2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="И в този час, когато с протяжна безнадеждност..."
	        android:onClick="onClick"
	        android:textColor="@android:color/white"
	        android:textColorHint="@android:color/background_light" />
        <Button
	        android:id="@+id/milev3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="О дъжд, о дъжд обилен и печален..."
	        android:onClick="onClick"
	        android:textColor="@android:color/white"
	        android:textColorHint="@android:color/background_light" />
        <Button
	        android:id="@+id/milev4"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="В този час на вечерни измами..."
	        android:onClick="onClick"
	        android:textColor="@android:color/white"
	        android:textColorHint="@android:color/background_light" />
        <Button
	        android:id="@+id/milev5"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Сред тези сиви отчаяния..."
	        android:onClick="onClick"
	        android:textColor="@android:color/white"
	        android:textColorHint="@android:color/background_light" />
        <Button
	        android:id="@+id/milev6"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Кажи: внезапно да изчезнеш..."
	        android:onClick="onClick"
	        android:textColor="@android:color/white"
	        android:textColorHint="@android:color/background_light" />
        <Button
	        android:id="@+id/milev7"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Мъртвешки зелена, сломена лежи..."
	        android:onClick="onClick"
	        android:textColor="@android:color/white"
	        android:textColorHint="@android:color/background_light" />
              
     
        
        </LinearLayout>
    </ScrollView>
        
  
     
   
 <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Button
            android:id="@+id/button_1"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:text="Назад"
            android:onClick="onClick" 
            android:textColor="@android:color/white"
       		android:textColorHint="@android:color/background_light"/>

   </LinearLayout>
  </LinearLayout>